  <script>
    /*
      Smooth tab switching and modal animations.
      - Panels are cross-faded (opacity + translate) to avoid font-size/resolution changes.
      - Hidden panels use `hidden` attribute only after fade-out completes to keep layout stable.
      - Modal open/close uses classes to animate; backdrop opacity is handled by CSS.
    */

    (function () {
      const openBtn = document.getElementById('openMore');
      const backdrop = document.getElementById('moreModal');
      const modal = backdrop.querySelector('.modal');
      const closeBtn = document.getElementById('closeMore');
      const tabButtons = Array.from(document.querySelectorAll('.tab-btn'));
      const panels = Array.from(document.querySelectorAll('.tab-panel'));
      const dot = openBtn.querySelector('.dot');

      // ensure consistent font rendering by forcing same computed font-size on modal content
      // (we already set a fixed --text-size in CSS)

      // helper: show modal
      function openModal() {
        openBtn.setAttribute('aria-expanded', 'true');
        // small dot pulse
        dot.style.transform = 'scale(1.25)';
        setTimeout(() => dot.style.transform = '', 260);

        backdrop.classList.add('open');
        backdrop.setAttribute('aria-hidden', 'false');

        // allow CSS to animate modal in
        requestAnimationFrame(() => modal.classList.add('open'));

        // ensure rules tab active
        activateTab('rules', false);

        // focus first tab after animation
        setTimeout(() => {
          const firstTab = document.querySelector('.tab-btn[data-tab="rules"]');
          if (firstTab) firstTab.focus();
        }, 260);
      }

      // helper: close modal with animation
      function closeModal() {
        openBtn.setAttribute('aria-expanded', 'false');

        // animate modal closing
        modal.classList.add('closing');
        modal.classList.remove('open');

        // small button feedback
        openBtn.animate([{ transform: 'translateY(0)' }, { transform: 'translateY(-6px) scale(.995)' }, { transform: 'translateY(0)' }], { duration: 260, easing: 'cubic-bezier(.2,.9,.2,1)' });

        setTimeout(() => {
          modal.classList.remove('closing');
          backdrop.classList.remove('open');
          backdrop.setAttribute('aria-hidden', 'true');
          openBtn.focus();
        }, 260);
      }

      // activate a tab by name; animate panels cross-fade
      function activateTab(name, animate = true) {
        tabButtons.forEach(btn => {
          const isActive = btn.getAttribute('data-tab') === name;
          btn.classList.toggle('active', isActive);
          btn.setAttribute('aria-selected', isActive ? 'true' : 'false');
        });

        panels.forEach(panel => {
          const isTarget = panel.getAttribute('data-name') === name;
          if (isTarget) {
            // make visible before animating
            panel.hidden = false;
            // force reflow then add active class for transition
            panel.classList.remove('active');
            requestAnimationFrame(() => {
              panel.classList.add('active');
            });
          } else {
            // fade out then hide
            panel.classList.remove('active');
            // hide after transition duration
            setTimeout(() => {
              if (!panel.classList.contains('active')) panel.hidden = true;
            }, 260);
          }
        });
      }

      // event listeners
      openBtn.addEventListener('click', openModal);
      closeBtn.addEventListener('click', closeModal);

      backdrop.addEventListener('click', (e) => {
        if (e.target === backdrop) closeModal();
      });

      tabButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          const target = btn.getAttribute('data-tab');
          // animate dot as feedback
          dot.animate([{ transform: 'scale(1)' }, { transform: 'scale(1.35)' }, { transform: 'scale(1)' }], { duration: 360, easing: 'cubic-bezier(.2,.9,.2,1)' });
          activateTab(target);
        });
      });

      // keyboard: Esc to close
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && backdrop.classList.contains('open')) closeModal();
      });

      // focus trap (simple): keep focus inside modal while open
      document.addEventListener('focus', function (event) {
        if (backdrop.classList.contains('open') && !backdrop.contains(event.target)) {
          event.stopPropagation();
          const firstTab = document.querySelector('.tab-btn.active') || document.querySelector('.tab-btn');
          if (firstTab) firstTab.focus();
        }
      }, true);

      // initialize: ensure only first panel visible
      panels.forEach(p => {
        if (p.getAttribute('data-name') !== 'rules') p.hidden = true;
        else p.classList.add('active');
      });
    })();
  </script>
</body>
